<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="3600">
  <Properties>
    <Property name="logd">logs</Property>
  </Properties>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout>
        <pattern>
          [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
        </pattern>>
      </PatternLayout>
    </Console>
    <RollingFile
      name="ROLLER"
      fileName="${logd}/wabbit.log"
      filePattern="${logd}/wabbit.log.%d{yyyyMMdd-hhmm}.gz">
      <PatternLayout
        pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="30"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="{{domain}}" level="debug" additivity="false">
      <AppenderRef ref="ROLLER" />
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="czlab" level="debug" additivity="false">
      <AppenderRef ref="ROLLER" />
      <AppenderRef ref="STDOUT" />
    </Logger>
    <Root level="debug">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>

